            <string>switch (chargeState)
{
    case "roam":
        moveSpeed = 3
        if chargeTimer &lt;= 0
        {
            playerID = instance_nearest(x, y, obj_player_parent)
            if distance_to_object(playerID) &lt; range and !collision_line(x,y, playerID.x, playerID.y, obj_wall, 1, 1) 
            {
                if !collision_line(x-32,y-32, playerID.x-32, playerID.y-32, obj_wall, 1, 1)
                if !collision_line(x-32,y+32, playerID.x-32, playerID.y+32, obj_wall, 1, 1) 
                if !collision_line(x+32,y-32, playerID.x+32, playerID.y-32, obj_wall, 1, 1)
                if !collision_line(x+32,y+32, playerID.x+32, playerID.y+32, obj_wall, 1, 1)
                {
                    moveSpeed = 0
                    chargeState = "preCharge"
                        chargeTimer = preChargeTime
                }
            }
        }
    break;
    case "preCharge":
    
        if !instance_exists(playerID)
        {
            switch (playerID)
            {
                case obj_player1:
                playerID = obj_player2
                break;
                case obj_player2:
                playerID = obj_player1
                break;
            }
            
            point = playerID
        }
    
        if chargeTimer &lt;= 0
        {
            chargeDir = point_direction(x, y, playerID.x, playerID.y)
            point = pointObject
            chargeState = "charge"
        }
    break;
    
    case "charge":
            moveSpeed = chargeSpeed
            pointObject.x = x + lengthdir_x(moveSpeed * 2, chargeDir)
            pointObject.y = y + lengthdir_y(moveSpeed * 2, chargeDir)
            
            if place_meeting(pointObject.x, pointObject.y, obj_wall)
            {
                chargeState = "chargeEnd"
                chargeTimer = sec * 0.25
                
                ds_list_clear(hitList)
            }
    break;
    
    case "chargeEnd":
            moveSpeed = 0
            if chargeTimer &lt;= 0
            {
                chargeState = "roam"
                point = instance_find(obj_baddiepoint, irandom(instance_number(obj_baddiepoint) - 1))
                chargeTimer = sec * 0.75
            }
    break;
}

if chargeTimer &gt; 0 and blueSlow &lt;= 0
